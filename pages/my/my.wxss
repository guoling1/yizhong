/* pages/my/my.wxss */
page{
  background: #f9f9f9;
}
.top{
  position: relative;
  width: 100%;
  height: 340rpx;
  text-align: center;
}
.top .content{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}
.top .content image{
  margin: 35rpx auto 30rpx;
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
}
.top .content .name{
  font-size: 32rpx;
}
navigator{
  padding: 0 25rpx;
  line-height: 64rpx;
  font-size: 32rpx;
  font-weight: bold;
  background: #fff;
}
navigator image{
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
  vertical-align:middle;
}
navigator text{
  display: inline-block;
  margin-left: 5rpx;
  padding: 18rpx;
  width: 580rpx;
  height: 75rpx;
  line-height: 75rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.no_border{
  border: none;
}
.empty{
  height: 20rpx;
  background: #f9f9f9;
}