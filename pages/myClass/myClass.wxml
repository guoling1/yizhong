<!--pages/myClass/myClass.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class='item'>
    <text class='title' decode='{{true}}'>学&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;校</text>
    <input name="school" placeholder='请输入学校名称'></input>
  </view>
  <view class='item'>
    <text class='title'>毕业时间</text>
    <input placeholder='请输入毕业时间'></input>
  </view>
  <view class='item'>
    <text class='title' decode='{{true}}'>院&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;系</text>
    <input placeholder='请输入院系' name='yuan' value='{{yuan}}'></input>
  </view>
  <view class='item'>
    <text class='title' decode='{{true}}'>专&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;业</text>
    <input placeholder='请输入专业'></input>
  </view>
  <view class="btn-area">
    <button form-type="submit">Submit</button>
    <button form-type="reset">Reset</button>
  </view>
</form>