/* pages/myTopic/myTopic.wxss */
.content .item{
  padding: 30rpx 0 0;
  width: 100%;
  box-shadow:0 6rpx 20rpx #d8eaff;
}
.content .item .user{
  padding: 0 30rpx 0;
  width: 690rpx;
}
.content .item .user image{
  float: left;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}
.content .item .right{
  margin-left: 100rpx;
  width: 590rpx;
}
.content .item .right text{
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
}
.content .item .right text.name{
  margin-bottom: 5rpx;
  font-size: 32rpx;
  color: #000;
}
.content .item .img_group{
  /* padding: 26rpx 0 0 30rpx; */
  margin:26rpx 0 0 30rpx;
  width: 720rpx;
}
.content .item .img_group image{
  margin-right: 15rpx;
  display: inline-block;
  width: 220rpx;
  height: 220rpx;
}
.content .item .des{
  display: inline-block;
  padding: 0 30rpx 0;
  width: 690rpx;
  line-height: 56rpx;
  font-size:28rpx;
  font-weight: bold;
}
.content .mes_item .user{
  padding: 10rpx 30rpx 0;
  width: 690rpx;
}
.content .mes_item .user image{
  float: left;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.content .mes_item .right{
  margin-left: 92rpx;
  width: 590rpx;
}
.content .mes_item .right text{
  display: block;
  font-size: 22rpx;
  color: #999;
}
.content .mes_item .right text.name{
  font-size: 28rpx;
  color: #000;
}
.content .mes_item .right .msg_des{
  font-size: 28rpx;
  line-height: 50rpx;
  color: #333;
}
.content .mes_item .right .msg_des view{
float: right;
width: 110rpx;
}
.content .mes_item .right .msg_des image{
  display: inline-block;
  width: 25rpx;
  height: 25rpx;
  margin:5px 3rpx 0 0;
}
.content .mes_item .right .msg_des text{
  font-weight: normal;
  font-size: 28rpx;
  color: #4e93f2;
}
.content .mes_item .right .msg_box{
  margin-bottom: 40rpx;
  padding: 0 18rpx;
  background: #f3f3f5;
} 
.content .mes_item .right .msg_box .box_item{
  padding: 15rpx 0;
  font-size: 24rpx;
  border-bottom: 1rpx solid #e7e7e7;
}
.content .mes_item .right .msg_box .box_item:last-child{
  border-bottom: none;
}
.content .mes_item .right .msg_box .box_item image{
  float: left;
  width: 71rpx;
  height: 71rpx;
}
.content .mes_item .right .msg_box .box_item .item_right{
  margin-left: 90rpx;
}
.content .mes_item .right .msg_box .box_item .item_right .item_name{
  font-weight: bold;
}
.content .mes_item .right .msg_box .box_item .item_right .item_con text{
  font-weight: bold;
  display: inline;
  color: #4e93f2;
  font-size: 24rpx;
}
.content .item .btn{
  display: flex;
  justify-content: space-between;
  background: #f9f9f9;
  line-height: 65rpx;
}
.content .item .btn .line{
  display: inline-block;
  margin-top: 12rpx;
  height: 40rpx;
  width: 1rpx;
  background: linear-gradient(rgba(245,245,245, 0.8),rgba(169,169,169, 0.8),rgba(105,105,105, 0.8),rgba(169,169,169, 0.8),rgba(245,245,245, 0.8));
}
.content .item .btn view{
  text-align: center;
  width: 50%;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
}
.content .item .btn view image{
  display: inline-block;
  margin-right: 12rpx;
  height: 30rpx;
  width: 30rpx;
  vertical-align:middle;
}
.content .item .textBox{
  width: 100%;
  background: #e7e7e7;
  overflow: hidden;
  font-size: 24rpx;
} 
.content .item .textBox textarea{
  display: block;
  margin: 0 auto;
  padding: 10rpx;
  width: 80%;
  height: 40rpx;
}
.content .item .textBox .textBtn{
  float: right;
  margin: 15rpx;
  background: #4e93f2;
  padding: 5rpx 10rpx;
  color: #fff;
  border-radius: 5rpx;
}